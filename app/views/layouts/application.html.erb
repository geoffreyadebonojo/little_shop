<!DOCTYPE html>
<html>
  <head>
    <title>LittleShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="nav_bar">
      <span class="link" id="welcome_link">
        <%= link_to "Return to Welcome Page"%>
      </span>
      <span class="link" id="browse_items_link">
        <%= link_to "Browse All Items"%>
      </span>
      <span class="link" id="browse_merchants_link">
        <%= link_to "See Merchants"%>
      </span>
      <span class="link" id="view_cart_link">
        <%= link_to "View Cart"%>
      </span>
      <span id="cart_items">Items in Cart: </span>
      <% if current_user == nil %>
        <span class="link" id="login_link">
          <%= link_to "Log In"%>
        </span>
        <span class="link" id="register_link">
          <%= link_to "Register"%>
        </span>
      <% end %>
      <% if current_user %>
        <div id="logged_in_as">
          <p>Logged-in as: <%= current_user.name %> </p>
        </div>
        <div class="link" id="profile_link">
          <%= link_to "My Profile" %>
        </div>
        <div class="link" id="orders_link">
          <%= link_to "My Orders" %>
        </div>
        <div class="link" id="logout_link">
          <%= link_to "Log Out" %>
        </div>
      <% end %>
      <% if current_merchant? || current_admin? %>
        <div class="link" id="merchant_dashboard_link">
          <%= link_to "Merchant Dashboard" %>
        </div>
      <% end %>
      <% if current_admin? %>
        <div class="link" id="admin_dashboard_link">
          <%= link_to "Admin Dashboard" %>
        </div>
        <div class="link" id="all_users_link">
          <%= link_to "View All Users" %>
        </div>
      <% end %>
    </div>


    <%= yield %>
  </body>
</html>
