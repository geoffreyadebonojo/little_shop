<h1 class="page-title"><u>Your Shopping Cart</u></h1>
<div class="cart">

  <% if @cart.count_all == 0 %>
  You have no items in your cart

  <% elsif @cart.items %>

    <ul id="all-items-box">
      <% @cart.items.each do |item| %>

        <div class="item-list">
          <%= @cart.quantity(item.id) %>
          <img src="<%= item.img_url %>" class="item-cart-image" alt="<%= item.name %>-image">
          <%= item.name %>
          <span class="price"><%= number_to_currency(item.price) %></span>
        </div>

      <% end %>
    </ul>

  <% end %>
</div>
