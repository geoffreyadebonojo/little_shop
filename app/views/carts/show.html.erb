<h1 class="page-title">Your Shopping Cart</h1>
<div class="cart">
  <% if @items.nil? %>
  You have no items in your cart
  <% elsif @items %>
    <ul>
      <% @items.each do |item| %>
        <div class="item-list">
          <img src="<%= item.img_url %>" class="item-cart-image" alt="<%= item.name %>-image">
          <%= item.name %>
          <%= number_to_currency(item.price) %>
        </div>
      <% end %>
    </ul>
  <% end %>
</div>
